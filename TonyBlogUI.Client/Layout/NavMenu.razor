@using TonyBlogUI.Client.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Tony Blog UI</a>
        
        <div class="d-flex align-items-center ms-auto">
            <AuthorizeView>
                <Authorized>
                    <div class="user-avatar-mobile me-2">
                        @GetUserInitials(context)
                    </div>
                </Authorized>
            </AuthorizeView>
            <button title="Navigation menu" class="navbar-toggler d-md-none" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="CloseNavMenu">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="blogs" @onclick="CloseNavMenu">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Blogs
                    </NavLink>
                </div>
                
                <AuthorizeView Roles="Admin" Context="adminContext">
                    <Authorized>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="users" @onclick="CloseNavMenu">
                                <span class="bi bi-people-nav-menu" aria-hidden="true"></span> Users
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>
                
                <div class="nav-divider d-md-none"></div>
                
                <div class="nav-item px-3 d-md-none">
                    <NavLink class="nav-link" href="change-password" @onclick="CloseNavMenu">
                        <span class="bi bi-shield-lock-nav-menu" aria-hidden="true"></span> Change Password
                    </NavLink>
                </div>
                <div class="nav-item px-3 d-md-none">
                    <button class="nav-link nav-link-danger nav-button" @onclick="HandleLogout">
                        <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Logout
                    </button>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login" @onclick="CloseNavMenu">
                        <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register" @onclick="CloseNavMenu">
                        <span class="bi bi-person-plus-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

