@page "/blogs"
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Blogs - Tony Blog UI</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Keyword Clusters</h1>
        <p class="text-secondary mb-0">Manage your blog keyword clusters and track completion status.</p>
    </div>
    @if (!isEditing && !showAddForm)
    {
        <button class="btn btn-primary" @onclick="ShowAddForm">
            <i class="bi bi-plus-lg me-2"></i>Add New
        </button>
    }
</div>

@if (blogs == null)
{
    <div class="d-flex justify-content-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!blogs.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
            <h5 class="mt-3">No keyword clusters found</h5>
            <p class="text-secondary">Get started by adding your first keyword cluster.</p>
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-lg me-2"></i>Add Keyword Cluster
            </button>
        </div>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Cluster Name</th>
                    <th>Intent</th>
                    <th>Keywords</th>
                    <th>Primary Keyword</th>
                    <th>Status</th>
                    <th>URL</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in blogs)
                {
                    <tr>
                        <td>
                            <span class="fw-medium">@blog.ClusterName</span>
                        </td>
                        <td>@blog.Intent</td>
                        <td>
                            <div class="keywords-cell">
                                @foreach (var keyword in blog.Keywords.Take(3))
                                {
                                    <span class="keyword-tag">@keyword</span>
                                }
                                @if (blog.Keywords.Count > 3)
                                {
                                    <span class="keyword-more">+@(blog.Keywords.Count - 3)</span>
                                }
                            </div>
                        </td>
                        <td>
                            <code class="primary-keyword">@blog.PrimaryKeyword</code>
                        </td>
                        <td>
                            @if (blog.Completed)
                            {
                                <span class="status-badge status-completed">
                                    <i class="bi bi-check-circle-fill me-1"></i>Completed
                                </span>
                            }
                            else
                            {
                                <span class="status-badge status-pending">
                                    <i class="bi bi-clock me-1"></i>Pending
                                </span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(blog.Url))
                            {
                                <a href="@blog.Url" target="_blank" class="url-link">
                                    <i class="bi bi-box-arrow-up-right me-1"></i>View
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-secondary" @onclick="() => EditBlog(blog)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-danger" @onclick="() => ConfirmDeleteBlog(blog)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (showAddForm)
{
    <div class="form-section">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i>Add New Keyword Cluster
            </h3>
            <button type="button" class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        
        <EditForm Model="newBlog" OnValidSubmit="AddBlog" FormName="addForm">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Cluster Name</label>
                    <InputText class="form-control" @bind-Value="newBlog.ClusterName" placeholder="Enter cluster name" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Intent</label>
                    <InputText class="form-control" @bind-Value="newBlog.Intent" placeholder="e.g., Informational, Transactional" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Primary Keyword</label>
                    <InputText class="form-control" @bind-Value="newBlog.PrimaryKeyword" placeholder="Main target keyword" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">URL</label>
                    <InputText class="form-control" @bind-Value="newBlog.Url" placeholder="https://example.com/blog-post" />
                </div>
                <div class="col-12">
                    <label class="form-label">Keywords</label>
                    <InputText class="form-control" @bind-Value="keywordsInput" placeholder="Enter keywords separated by commas" />
                    <div class="form-text">Separate multiple keywords with commas</div>
                </div>
                <div class="col-md-4">
                    <div class="form-check mt-3">
                        <InputCheckbox class="form-check-input" id="addCompletedCheck" @bind-Value="newBlog.Completed" />
                        <label class="form-check-label" for="addCompletedCheck">
                            Mark as completed
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <hr class="my-3" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-2"></i>Add Cluster
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
}

@if (isEditing)
{
    <div class="form-section">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>Edit Keyword Cluster
            </h3>
            <button type="button" class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        
        <EditForm Model="editBlog" OnValidSubmit="UpdateBlog" FormName="editForm">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Cluster Name</label>
                    <InputText class="form-control" @bind-Value="editBlog.ClusterName" placeholder="Enter cluster name" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Intent</label>
                    <InputText class="form-control" @bind-Value="editBlog.Intent" placeholder="e.g., Informational, Transactional" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Primary Keyword</label>
                    <InputText class="form-control" @bind-Value="editBlog.PrimaryKeyword" placeholder="Main target keyword" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">URL</label>
                    <InputText class="form-control" @bind-Value="editBlog.Url" placeholder="https://example.com/blog-post" />
                </div>
                <div class="col-12">
                    <label class="form-label">Keywords</label>
                    <InputText class="form-control" @bind-Value="editKeywordsInput" placeholder="Enter keywords separated by commas" />
                    <div class="form-text">Separate multiple keywords with commas</div>
                </div>
                <div class="col-md-4">
                    <div class="form-check mt-3">
                        <InputCheckbox class="form-check-input" id="editCompletedCheck" @bind-Value="editBlog.Completed" />
                        <label class="form-check-label" for="editCompletedCheck">
                            Mark as completed
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <hr class="my-3" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-2"></i>Update Cluster
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
}

<style>
    .keywords-cell {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25rem;
        max-width: 200px;
    }
    
    .keyword-tag {
        background-color: var(--primary-light);
        color: var(--primary);
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
    }
    
    .keyword-more {
        background-color: var(--surface-hover);
        color: var(--text-secondary);
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
    }
    
    .primary-keyword {
        background-color: var(--surface-hover);
        color: var(--text-primary);
        padding: 0.25rem 0.5rem;
        border-radius: var(--radius);
        font-size: 0.8125rem;
    }
    
    .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.625rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
    }
    
    .status-completed {
        background-color: #dcfce7;
        color: #166534;
    }
    
    .status-pending {
        background-color: #fef3c7;
        color: #92400e;
    }
    
    .url-link {
        color: var(--primary);
        font-size: 0.875rem;
        font-weight: 500;
    }
    
    .url-link:hover {
        text-decoration: underline;
    }
    
    .btn-group .btn {
        padding: 0.375rem 0.625rem;
    }
    
    .form-section {
        background-color: var(--surface);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        box-shadow: var(--shadow);
        margin-top: 1.5rem;
        border: 1px solid var(--border);
    }
    
    .form-text {
        color: var(--text-muted);
        font-size: 0.8125rem;
    }
    
    .spinner-border {
        width: 3rem;
        height: 3rem;
    }
</style>

@code {
    private List<Blog>? blogs;
    private Blog newBlog = new();
    private Blog editBlog = new();
    private string keywordsInput = string.Empty;
    private string editKeywordsInput = string.Empty;
    private bool isEditing = false;
    private bool showAddForm = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadBlogs();
    }

    private void ShowAddForm()
    {
        showAddForm = true;
        isEditing = false;
        newBlog = new();
        keywordsInput = string.Empty;
    }

    private async Task LoadBlogs()
    {
        try
        {
            blogs = await Http.GetFromJsonAsync<List<Blog>>("api/blogs");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading blogs: {ex.Message}");
            blogs = new List<Blog>();
        }
    }

    private async Task AddBlog()
    {
        try
        {
            newBlog.Keywords = keywordsInput.Split(',', StringSplitOptions.RemoveEmptyEntries)
                .Select(t => t.Trim()).ToList();

            var response = await Http.PostAsJsonAsync("api/blogs", newBlog);
            if (response.IsSuccessStatusCode)
            {
                newBlog = new();
                keywordsInput = string.Empty;
                showAddForm = false;
                await LoadBlogs();
            }
            else
            {
                Console.WriteLine($"Error adding blog: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception adding blog: {ex.Message}");
        }
    }

    private void EditBlog(Blog blog)
    {
        editBlog = new Blog
        {
            Id = blog.Id,
            ClusterName = blog.ClusterName,
            Intent = blog.Intent,
            Keywords = new List<string>(blog.Keywords),
            PrimaryKeyword = blog.PrimaryKeyword,
            Completed = blog.Completed,
            Url = blog.Url
        };
        editKeywordsInput = string.Join(", ", blog.Keywords);
        isEditing = true;
        showAddForm = false;
    }

    private async Task UpdateBlog()
    {
        try
        {
            editBlog.Keywords = editKeywordsInput.Split(',', StringSplitOptions.RemoveEmptyEntries)
                .Select(t => t.Trim()).ToList();

            var response = await Http.PutAsJsonAsync($"api/blogs/{editBlog.Id}", editBlog);
            if (response.IsSuccessStatusCode)
            {
                isEditing = false;
                editBlog = new();
                editKeywordsInput = string.Empty;
                await LoadBlogs();
            }
            else
            {
                Console.WriteLine($"Error updating blog: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception updating blog: {ex.Message}");
        }
    }

    private void CancelEdit()
    {
        isEditing = false;
        showAddForm = false;
        editBlog = new();
        newBlog = new();
        editKeywordsInput = string.Empty;
        keywordsInput = string.Empty;
    }

    private async Task ConfirmDeleteBlog(Blog blog)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{blog.ClusterName}'?");
        if (confirmed)
        {
            await DeleteBlog(blog.Id);
        }
    }

    private async Task DeleteBlog(string id)
    {
        try
        {
            var response = await Http.DeleteAsync($"api/blogs/{id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadBlogs();
            }
            else
            {
                Console.WriteLine($"Error deleting blog: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception deleting blog: {ex.Message}");
        }
    }
}
