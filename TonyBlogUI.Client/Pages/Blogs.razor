@page "/blogs"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject HttpClient Http
@inject IJSRuntime JS
@using CsvHelper
@using CsvHelper.Configuration
@using System.Globalization
@using System.Text
@using System.IO
@using ClosedXML.Excel

<PageTitle>Blogs - Tony Blog UI</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Keyword Clusters</h1>
        <p class="text-secondary mb-0">Manage your blog keyword clusters and track completion status.</p>
    </div>
    @if (!isEditing && !showAddForm)
    {
        <div class="d-flex gap-2">
            <div class="btn-group">
                <button class="btn btn-outline-secondary" @onclick="TriggerCsvFileInput">
                    <i class="bi bi-upload me-2"></i>Import CSV
                </button>
                <button class="btn btn-outline-secondary" @onclick="TriggerExcelFileInput">
                    <i class="bi bi-file-earmark-excel me-2"></i>Import Excel
                </button>
            </div>
            @if (blogs != null && blogs.Any())
            {
                <div class="btn-group">
                    <button class="btn btn-outline-primary" @onclick="ExportToCsv">
                        <i class="bi bi-download me-2"></i>Export CSV
                    </button>
                    <button class="btn btn-outline-success" @onclick="ExportToExcel">
                        <i class="bi bi-file-earmark-excel me-2"></i>Export Excel
                    </button>
                </div>
            }
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-lg me-2"></i>Add New
            </button>
        </div>
    }
</div>

<InputFile id="csvFileInput" OnChange="ImportFromCsv" Accept=".csv" style="display: none;" />
<InputFile id="excelFileInput" OnChange="ImportFromExcel" Accept=".xlsx,.xls" style="display: none;" />

@if (importMessage != null)
{
    <div class="alert @(importSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        <i class="bi @(importSuccess ? "bi-check-circle" : "bi-exclamation-triangle") me-2"></i>
        @importMessage
        <button type="button" class="btn-close" @onclick="ClearImportMessage"></button>
    </div>
}

@if (blogs == null)
{
    <div class="d-flex justify-content-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!blogs.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
            <h5 class="mt-3">No keyword clusters found</h5>
            <p class="text-secondary">Get started by adding your first keyword cluster.</p>
            <button class="btn btn-primary" @onclick="ShowAddForm">
                <i class="bi bi-plus-lg me-2"></i>Add Keyword Cluster
            </button>
        </div>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Cluster Name</th>
                    <th>Intent</th>
                    <th>Keywords</th>
                    <th>Primary Keyword</th>
                    <th>Status</th>
                    <th>URL</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in blogs)
                {
                    <tr>
                        <td>
                            <span class="fw-medium">@blog.ClusterName</span>
                        </td>
                        <td>@blog.Intent</td>
                        <td>
                            <div class="keywords-cell">
                                @foreach (var keyword in blog.Keywords.Take(3))
                                {
                                    <span class="keyword-tag">@keyword</span>
                                }
                                @if (blog.Keywords.Count > 3)
                                {
                                    <span class="keyword-more">+@(blog.Keywords.Count - 3)</span>
                                }
                            </div>
                        </td>
                        <td>
                            <code class="primary-keyword">@blog.PrimaryKeyword</code>
                        </td>
                        <td>
                            @if (blog.Completed)
                            {
                                <span class="status-badge status-completed">
                                    <i class="bi bi-check-circle-fill me-1"></i>Completed
                                </span>
                            }
                            else
                            {
                                <span class="status-badge status-pending">
                                    <i class="bi bi-clock me-1"></i>Pending
                                </span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(blog.Url))
                            {
                                <a href="@blog.Url" target="_blank" class="url-link">
                                    <i class="bi bi-box-arrow-up-right me-1"></i>View
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-secondary" @onclick="() => EditBlog(blog)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-danger" @onclick="() => ConfirmDeleteBlog(blog)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (showAddForm)
{
    <div class="form-section">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i>Add New Keyword Cluster
            </h3>
            <button type="button" class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        
        <EditForm Model="newBlog" OnValidSubmit="AddBlog" FormName="addForm">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Cluster Name</label>
                    <InputText class="form-control" @bind-Value="newBlog.ClusterName" placeholder="Enter cluster name" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Intent</label>
                    <InputText class="form-control" @bind-Value="newBlog.Intent" placeholder="e.g., Informational, Transactional" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Primary Keyword</label>
                    <InputText class="form-control" @bind-Value="newBlog.PrimaryKeyword" placeholder="Main target keyword" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">URL</label>
                    <InputText class="form-control" @bind-Value="newBlog.Url" placeholder="https://example.com/blog-post" />
                </div>
                <div class="col-12">
                    <label class="form-label">Keywords</label>
                    <InputText class="form-control" @bind-Value="keywordsInput" placeholder="Enter keywords separated by commas" />
                    <div class="form-text">Separate multiple keywords with commas</div>
                </div>
                <div class="col-md-4">
                    <div class="form-check mt-3">
                        <InputCheckbox class="form-check-input" id="addCompletedCheck" @bind-Value="newBlog.Completed" />
                        <label class="form-check-label" for="addCompletedCheck">
                            Mark as completed
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <hr class="my-3" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-2"></i>Add Cluster
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
}

@if (isEditing)
{
    <div class="form-section">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>Edit Keyword Cluster
            </h3>
            <button type="button" class="btn btn-secondary btn-sm" @onclick="CancelEdit">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        
        <EditForm Model="editBlog" OnValidSubmit="UpdateBlog" FormName="editForm">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Cluster Name</label>
                    <InputText class="form-control" @bind-Value="editBlog.ClusterName" placeholder="Enter cluster name" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Intent</label>
                    <InputText class="form-control" @bind-Value="editBlog.Intent" placeholder="e.g., Informational, Transactional" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Primary Keyword</label>
                    <InputText class="form-control" @bind-Value="editBlog.PrimaryKeyword" placeholder="Main target keyword" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">URL</label>
                    <InputText class="form-control" @bind-Value="editBlog.Url" placeholder="https://example.com/blog-post" />
                </div>
                <div class="col-12">
                    <label class="form-label">Keywords</label>
                    <InputText class="form-control" @bind-Value="editKeywordsInput" placeholder="Enter keywords separated by commas" />
                    <div class="form-text">Separate multiple keywords with commas</div>
                </div>
                <div class="col-md-4">
                    <div class="form-check mt-3">
                        <InputCheckbox class="form-check-input" id="editCompletedCheck" @bind-Value="editBlog.Completed" />
                        <label class="form-check-label" for="editCompletedCheck">
                            Mark as completed
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <hr class="my-3" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-2"></i>Update Cluster
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
}

